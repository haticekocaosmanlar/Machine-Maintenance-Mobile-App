<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haticekocaosmanlar.machinemaintenance.maintenance">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/haftalik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="haftalik"
            android:text="Haftalık" />

        <Button
            android:id="@+id/aylik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="aylik"
            android:text="aylik" />

        <Button
            android:id="@+id/ucaylik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ucaylik"
            android:text="3 aylik" />

        <Button
            android:id="@+id/altiaylik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="altiaylik"
            android:text="6 aylik" />

        <Button
            android:id="@+id/yillik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="yillik"
            android:text="yıllık" />

        <Button
            android:id="@+id/ucyillik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ucyillik"
            android:text="3 Yıllık" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
